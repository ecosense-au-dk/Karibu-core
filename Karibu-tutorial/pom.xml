<project xmlns="http://maven.apache.org/POM/4.0.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>dk.au.cs.karibu</groupId>
  <artifactId>Karibu-tutorial</artifactId>
  <version>0.1-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>Karibu-tutorial</name>
  <url>http://www.karibu.cs.au.dk</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <!-- The 'pf' property is the root of the resource Propery Files -->
    <pf>resource/lab-duma</pf>
    <!-- Max number of measurements to send per second for load generator -->
    <maxprsec>1</maxprsec>
    <!-- Name of this node, to identify it for the JMX connections registry -->
    <hostname>localhost</hostname>
  </properties>

  <dependencies>
    
    <dependency>
      <groupId>dk.au.cs.karibu</groupId>
      <artifactId>Karibu-consumer</artifactId>
      <version>2.0.0</version>
    </dependency>
    
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
      <version>1.7.7</version>
    </dependency>
    
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.codehaus.jackson</groupId>
      <artifactId>jackson-core-asl</artifactId>
      <version>1.9.13</version>
    </dependency>

     <dependency>
      <groupId>org.codehaus.jackson</groupId>
      <artifactId>jackson-mapper-asl</artifactId>
      <version>1.9.13</version>
    </dependency>

  </dependencies>

  <!-- Ensure resource files are copied to 'target' and thus
       available during execution -->
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
  </build> 

  <profiles>
    <!-- run daemon: usage: mvn -Ddaemon -Dpf=(resource-root-folder) -->
    <profile>
      <id>daemon</id>
      <activation><property><name>daemon</name></property></activation>
      <build>
	<plugins>
	  <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.3</version>
            <configuration>
              <mainClass>dk.au.cs.karibu.main.StorageDaemon</mainClass>
              <arguments>
		<argument>mongo</argument>
		<argument>${pf}</argument>
              </arguments>
            </configuration>
	  </plugin>
	</plugins>
      </build>
    </profile>
    
    <profile>
      <id>load</id>
      <activation><property><name>load</name></property></activation>
      <build>
	<plugins>
	  <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.3</version>
            <configuration>
              <mainClass>dk.au.cs.karibu.load.GenerateLoad</mainClass>
              <arguments>
		<argument>${pf}</argument>
		<argument>${maxprsec}</argument>
              </arguments>
            </configuration>
	  </plugin>
	</plugins>
      </build>
    </profile>


    <!-- experimental for now -->
    <profile>
      <id>daemon2</id>
      <activation><property><name>daemon2</name></property></activation>
      <build>
	<plugins>
	  <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.3</version>
            <configuration>
	      <executable>java</executable>
              <arguments>
		<argument>-Djava.security.policy=resource/security.policy</argument>
		<argument>-Dcom.sun.management.jmxremote.port=4672</argument>
		<argument>-Dcom.sun.management.jmxremote.authenticate=false</argument>
		<argument>-Dcom.sun.management.jmxremote.ssl=false</argument>
		<argument>-Djava.rmi.server.hostname=${hostname}</argument>

		<argument>-classpath</argument>
		<classpath/>
		<argument>dk.au.cs.karibu.main.StorageDaemon</argument>
		<argument>mongo</argument>
		<argument>${pf}</argument>

              </arguments>
            </configuration>
	  </plugin>
	</plugins>
      </build>
    </profile>


  </profiles>
</project>
